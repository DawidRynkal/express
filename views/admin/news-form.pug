extends ../layout

block content
  h1= title

    if errors.errors !== undefined
        each message in errors.errors
            p=message

    form(method='post')
        p
            label Title
            input(type='text' name='title' value=body.title || '')
        p
            label Description
            textarea(type='text' name='description')=body.description || ''
        p
            input(type='submit' value='Zapisz')